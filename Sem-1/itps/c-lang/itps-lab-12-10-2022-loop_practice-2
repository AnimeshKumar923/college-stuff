#include <stdio.h>

int main() {
   
   int a, b, c=0, d, e, i;
   int sum=0;

printf("enter first number:");
scanf("%d", &a);

printf("enter second number:");
scanf("%d", &b);
   
   for(i=a; i<=b; i++)
   {
       if(i%7==0)
       {
           sum=sum+i;
           c++;
       }
   
   }
   
    printf("the sum is: %d \n", sum);
    printf("the average is: %d \n", sum/c);
    
    return 0;
}
