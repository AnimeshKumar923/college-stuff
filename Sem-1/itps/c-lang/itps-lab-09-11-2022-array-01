// storing values in array and displaying it

#include <stdio.h>

int main() {
    
    int i;
    int arr[5];
    
    for(i=0; i<5; i++)
    {
        printf("Enter a number; ");
        scanf("%d", &arr[i]);
    
    }
    
    for(i=0; i<5; i++)
    {
        printf("%d\t", arr[i]);
    }

    return 0;
}




//finding average of array elements

#include <stdio.h>

int main() {
    
    int i, avg,a=0;
    int arr[5];
    
    for(i=0; i<5; i++)
    {
        printf("Enter a number: ");
        scanf("%d", &arr[i]);
        a=a+arr[i];
    
    }
    printf("array elements are: ");
    for(i=0; i<5; i++)
    {
        printf(" %d\t", arr[i]);
    }
    
    
    
    avg=a/5;
    
    printf("\naverage is = %d", avg);

    return 0;
}




// to find the maximum value in the array

#include <stdio.h>

int main() {
    
    int i, avg,max=0;
    int arr[5];
    
    for(i=0; i<5; i++)
    {
        printf("Enter a number: ");
        scanf("%d", &arr[i]);
    }
    
    for(i=0; i<5; i++)
    {
        if(arr[i]>max)
            max=arr[i];
    }
    
    printf("the maximum in array is: %d", max);
    
    return 0;
}
