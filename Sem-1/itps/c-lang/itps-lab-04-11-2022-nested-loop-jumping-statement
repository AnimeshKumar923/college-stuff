#include <stdio.h>

int main() {

    int a,b,c,d,e,i;
    
    printf("enter a number: ");
    scanf("%d", &a);
    
    for(i=1; i<=a; i++)
    {
        if(i%2!=0)
            {
                continue;
                
            }
            printf("%d\n", i);
    }
    
    return 0;
}






#include<stdio.h>  
  
int main()  
{  
    int row, col;  
  
    for(row = 1; row <= 3; row++)  
    {  
        for(col = 1; col <= 4; col++)  
        {  
           if(col==2)
           continue;
               
            printf("%d\t", col);  
        }  
  
        printf("\n");  
    }  
  
    return 0;  
}  










#include<stdio.h>  
  
int main()  
{  
    int a,b,c,d,e,i;
    
   
    
    for(i=1; i>=0; i++)
    { 
        printf("enter a number: ");
        scanf("%d", &a);
        printf("your input number is: %d\n", a);
        if(a==0)
            break;
    }        
    
    printf("your input number is zero, the program will now end.");
    
    return 0;  
}  
